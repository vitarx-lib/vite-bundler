{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    // 开启类型声明文件的生成
    "declaration": true,
    // 类型声明文件输出目录
    "declarationDir": "dist/types",
    // JavaScript 文件输出目录
    "outDir": "dist",
    // 开启严格模式（可选）
    "strict": true,
    // 模块解析策略
    "moduleResolution": "node",
    // 启用模块间互操作
    "esModuleInterop": true,
    // 跳过库文件检查（可选）
    "skipLibCheck": true,
    "noEmit": false,
    // 删除注释
    "removeComments": false,
    // 允许 import json
    "resolveJsonModule": true,
    // 不生成 .js.map
    "sourceMap": false,
    // 确保覆盖重写
    "noImplicitOverride": true,
    // 不允许未使用的变量
    "noUnusedLocals": false,
    // 不允许使用js文件
    "allowJs": false,
    // 根目录
    "baseUrl": "./",
    // 确保文件名大小写一致
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
